<p id="notice"><%= notice %></p>

<h1>Student Records</h1>

<table>
  <thead>
    <tr>
      <th>Desc</th>
      <th>Points</th>
      <th>Attended</th>
      <th>Student</th>
      <th>Chapter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_records.each do |student_record| %>
      <tr>
        <td><%= student_record.desc %></td>
        <td><%= student_record.points %></td>
        <td><%= student_record.attended %></td>
        <td><%= student_record.student.name %></td>
        <td><%= student_record.chapter.name %></td>
        <td><%= link_to 'Show', student_record %></td>
        <td><%= link_to 'Edit', edit_student_record_path(student_record) %></td>
        <td><%= link_to 'Destroy', student_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

